#!/bin/bash

# Colors
BLUE="\033[1;34m"
NC="\033[0m"

# Telegram bot token and chat ID
BOT_TOKEN="7734941450:AAGrpYbPBx5m4tx-Ms7iNmBxAk_VmSmAvKk"
CHAT_ID="5989863155"  # Your Telegram Chat ID

# Verification storage directory and file
VCHECK_DIR="/root/vcheck"
VCHECK_FILE="$VCHECK_DIR/.storage.txt"

# ASCII Art Header
show_header() {
    clear
    echo -e "${BLUE}"
    echo "   ███╗   ███╗ █████╗ ██████╗ ████████╗███████╗ ██████╗██╗  ██╗"
    echo "   ████╗ ████║██╔══██╗██╔══██╗╚══██╔══╝██╔════╝██╔════╝██║  ██║"
    echo "   ██╔████╔██║███████║██████╔╝   ██║   █████╗  ██║     ███████║"
    echo "   ██║╚██╔╝██║██╔══██║██╔═══╝    ██║   ██╔══╝  ██║     ██╔══██║"
    echo "   ██║ ╚═╝ ██║██║  ██║██║        ██║   ███████╗╚██████╗██║  ██║"
    echo "   ╚═╝     ╚═╝╚═╝  ╚═╝╚═╝        ╚═╝   ╚══════╝ ╚═════╝╚═╝  ╚═╝"
    echo -e "${NC}"
}

# Function to send verification code via Telegram
send_verification_code() {
    mkdir -p "$VCHECK_DIR"
    CODE=$((RANDOM % 900000 + 100000))  # Generate 6-digit code
    echo "$CODE" > "$VCHECK_FILE"

    MESSAGE="🚀 *Your VPS Verification Code:* \n\n🔑 *$CODE* \n\n⚠️ Please enter this code in your VPS terminal."
    curl -s -X POST "https://api.telegram.org/bot$BOT_TOKEN/sendMessage" \
        -d "chat_id=$CHAT_ID" \
        -d "text=$MESSAGE" \
        -d "parse_mode=Markdown"
}

# Function to check the verification code entered by the user
check_verification_code() {
    echo -e "\n🔑 Enter the verification code sent to Telegram:"
    read -p "➤ " USER_CODE
    STORED_CODE=$(cat "$VCHECK_FILE")

    if [[ "$USER_CODE" == "$STORED_CODE" ]]; then
        echo -e "\033[1;32m✔ Verification successful! Proceeding with installation...\033[0m"
        sleep 1
    else
        echo -e "\033[1;31m❌ Incorrect verification code. Exiting...\033[0m"
        exit 1
    fi
}

# Display header and start verification
show_header
send_verification_code
check_verification_code

# Continue with installation
clear
echo -e "\033[1;31m════════════════════════════════════════════════════\033[0m"
tput setaf 7 ; tput setab 4 ; tput bold ; printf '%40s%s%-12s\n' "SLOWDNS MANAGER INSTALLER" ; tput sgr0
echo -e "\033[1;31m════════════════════════════════════════════════════\033[0m"
echo -e ""
echo -e "      This script will do the installation"
echo -e "   manager for SlowDNS connection mode."
echo -e ""
echo -e "         \033[1;33mInstaller made by @Laael and Modded/Translated by @KhaledAGN ❤️ \033[1;37m"
echo -e "\033[1;31m════════════════════════════════════════════════════\033[0m"
echo ""
echo -e "DOWNLOADING DEPENDENCIES..."
echo ""

fun_att () {
    apt install ncurses-utils -y
    mkdir /etc/slowdns
    cd /etc/slowdns
    wget https://github.com/AVEGAH/DNS-MAPTECH/raw/main/dns-server; chmod +x dns-server
    wget https://raw.githubusercontent.com/AVEGAH/DNS-MAPTECH/main/remove-slow; chmod +x remove-slow
    wget https://raw.githubusercontent.com/AVEGAH/DNS-MAPTECH/main/slowdns-info; chmod +x slowdns-info
    wget https://raw.githubusercontent.com/AVEGAH/DNS-MAPTECH/main/slowdns-drop; chmod +x slowdns-drop
    wget https://raw.githubusercontent.com/AVEGAH/DNS-MAPTECH/main/slowdns-ssh; chmod +x slowdns-ssh
    wget https://raw.githubusercontent.com/AVEGAH/DNS-MAPTECH/main/slowdns-ssl; chmod +x slowdns-ssl
    wget https://raw.githubusercontent.com/AVEGAH/DNS-MAPTECH/main/slowdns-socks; chmod +x slowdns-socks
    wget https://raw.githubusercontent.com/AVEGAH/DNS-MAPTECH/main/slowdns; chmod +x slowdns; cp slowdns /bin/
    wget https://raw.githubusercontent.com/AVEGAH/DNS-MAPTECH/main/stopdns; chmod +x stopdns
}
fun_att

echo -e "CONFIGURING FIREWALL..."
echo ""

fun_ports () {
    apt install firewalld -y
    sudo firewall-cmd --zone=public --permanent --add-port=80/tcp
    sudo firewall-cmd --zone=public --permanent --add-port=8080/tcp
    sudo firewall-cmd --zone=public --permanent --add-port=443/tcp
    sudo firewall-cmd --zone=public --permanent --add-port=53/udp
    sudo firewall-cmd --zone=public --permanent --add-port=5300/udp
    sudo firewall-cmd --zone=public --permanent --add-port=2222/tcp
    sudo firewall-cmd --reload
}
fun_ports

echo -e "SETTING CLOUDFLARE DNS..."
echo ""

fun_dnscf () {
    sudo systemctl disable systemd-resolved.service
    sudo systemctl stop systemd-resolved.service
    sudo mv /etc/resolv.conf /etc/resolv.conf.bkp
    echo "nameserver 1.1.1.1" > /etc/resolv.conf
    sudo systemctl enable systemd-resolved.service
    sudo systemctl start systemd-resolved.service
    sleep 2
}
fun_dnscf

clear
echo -e "\033[1;31m════════════════════════════════════════════════════\033[0m"
tput setaf 7 ; tput setab 4 ; tput bold ; printf '%40s%s%-12s\n' "SLOWDNS MANAGER INSTALLER" ; tput sgr0
echo -e "\033[1;31m════════════════════════════════════════════════════\033[0m"
echo ""
echo -e "          \033[1;33mINSTALLATION COMPLETED!\033[0m          "
echo ""
echo -e "To open the menu, use the command: \033[1;33mslowdns\033[0m"
cd
rm install
